{#{% extends '@EasyAdmin/page/content.html.twig' %}#}
{% extends 'base.html.twig' %}
{% block title %}Przychodnia{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code  { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container border" >

    {% for label, message in app.flashes %}
        {% for message in message %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
    {% endfor %}
    {% endfor %}

    <h1 class="text-center">Witamy w naszej przychodni</h1>



    {# sprawdzenie czy jest ktos zalogowany  #}

    {%  if is_granted('IS_AUTHENTICATED_FULLY') %}
        <form method="get" action="{{ path('add') }}">
            <div class="form-group field-button ">
                <button type="submit" class="btn btn-success btn-lg btn-block">Ustal Wizyte </button>
            </div>
        </form>

        <form method="get" action="{{ path('list_visit') }}">
            <div class="form-group field-button">
                <button type="submit" class="btn btn-success btn-lg btn-block">Zobacz obecne wizyty </button>
            </div>
        </form>

        <form method="get" action="{{ path('app_logout') }}">
            <div class="form-group field-button">
                <button type="submit" class="btn btn-success btn-lg btn-block">Wyloguj </button>
            </div>
        </form>


    {%  else %}


       <form method="get" action="{{ path('app_login') }}">
        <div class="form-group field-button">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Zaloguj sie </button>
        </div>
    </form>

        <form method="get" action="{{ path('app_register') }}">
            <div class="form-group field-button ">
                <button type="submit" class="btn btn-success btn-lg btn-block">Rejestracja </button>
            </div>
        </form>
    {% endif %}


</div>
{% endblock %}
